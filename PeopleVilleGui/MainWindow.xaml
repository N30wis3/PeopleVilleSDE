<Window x:Class="PeopleVilleGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeopleVilleGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1280" Background="#333" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        
        <DockPanel Name="CloMinMaxPanel" Background="DarkBlue" Height="30" Width="70" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5">
            <!-- minimize button -->
            <Button Name="minBtn" Width="30" HorizontalAlignment="Left" BorderBrush="Transparent" Margin="2" Click="OnClikMin">
                <Button.Background>
                    <ImageBrush ImageSource="https://icons.veryicon.com/png/o/education-technology/calculator/minus-sign-9.png"/>
                </Button.Background>
            </Button>
            <!-- close button-->
            <Button Name="CloseBtn" Width="30" HorizontalAlignment="Right" BorderBrush="Transparent" Margin="2" Click="OnClikClose">
                <Button.Background>
                    <ImageBrush ImageSource="https://www.pngall.com/wp-content/uploads/10/Plus-Symbol-Vector-PNG-Cutout.png"/>
                </Button.Background>
            </Button>


        </DockPanel>

        <StackPanel Height="auto" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left">
            <!-- Population button -->
            <Button x:Name="Population" Margin="10"  Height="50" Background="Transparent" BorderBrush="Bisque" Click="Populations_Click" >
                <Button.Template>
                    <ControlTemplate TargetType="Button" >
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Label HorizontalAlignment="Center" Padding="0" Content="Population" Foreground="white" />
            <!-- Locations button -->
            <Button x:Name="Locations" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Click="Locations_Click" Background="Transparent" BorderBrush="Bisque">
                <Button.Template>
                    <ControlTemplate TargetType="Button" >
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Label HorizontalAlignment="Center" Padding="0" Content="Locations" Foreground="white"/>
            
            <!-- add more buttons if you need -->
            
        </StackPanel>
        <!-- StackPanel that holds the additional buttons from location (Houses and Factorys) -->
        <StackPanel x:Name="LocationsPanel" VerticalAlignment="Top" HorizontalAlignment="Left" Height="120" Width="80" Margin="80 90"   Visibility="Collapsed">
            <!-- button design for houses-->
            <Button x:Name="Houses" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5 5" Content="Houses" Background="Transparent" BorderBrush="Bisque"  Foreground="white">
                <Button.Template>
                    <ControlTemplate TargetType="Button" >
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10"  >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!-- button design for factory -->
            <Button x:Name="Factorys" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5 5" Content="Factorys" Background="Transparent" BorderBrush="Bisque"  Foreground="white">
                <Button.Template>
                    <ControlTemplate TargetType="Button" >
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- population design -->
        <StackPanel x:Name="population" Margin="80 0 0 0"  Visibility="Collapsed" >
            <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Auto" Height="auto" VerticalAlignment="Top" Margin="0,0,0,0">
                <StackPanel>
                    
                    <StackPanel Width="auto" Height="auto" VerticalAlignment="Top" Margin="0,0,0,20">
                        <!-- title -->
                        <Label Height="auto" Width="auto" HorizontalAlignment="Center" FontSize="50" Foreground="White" VerticalAlignment="Top" Padding="10" FontStyle="Normal" FontFamily="Sitka Text" >
                            People of the village
                        </Label>
                        <Separator Margin="0,0,0,10"></Separator>


                        <StackPanel Orientation="Horizontal">
                            <DockPanel Height="100" Width="500" HorizontalAlignment="Left" Margin="50  0 0 0" >
                                <DockPanel.Background>
                                    <!-- image -->
                                    <ImageBrush AlignmentX="Left" ImageSource="https://neweralive.na/wp-content/uploads/2024/06/lloyd-sikeba.jpg" Stretch="Uniform"/>
                                </DockPanel.Background>

                                <DockPanel>
                                    <StackPanel Width="350" HorizontalAlignment="Left" Margin="140 0 0 0">
                                        <Border BorderThickness="2,0,2,2" BorderBrush="#CC8F00" CornerRadius="5,5,10,10">
                                            <!-- persons informations -->
                                            <Label  Width="auto" FontSize="10" HorizontalContentAlignment="Left" Foreground="White" Padding="10" FontStyle="Normal" FontFamily="Sitka Text">

                                                <TextBlock TextAlignment="Left" Width="340">
                        Name: <LineBreak/>
                        Birthday: <LineBreak/>
                        Country: <LineBreak/>
                        Adress: <LineBreak/>
                        Sex: <LineBreak/>
                        Phone Number:
                                                </TextBlock>


                                            </Label>

                                        </Border>

                                    </StackPanel>

                                </DockPanel>
    


                            </DockPanel>
                            <DockPanel Height="100" Width="500" HorizontalAlignment="Right" Margin="100 0 0 0" >
                                <DockPanel.Background>
                                    <!-- image -->
                                    <ImageBrush AlignmentX="Left" ImageSource="https://neweralive.na/wp-content/uploads/2024/06/lloyd-sikeba.jpg" Stretch="Uniform"/>
                                </DockPanel.Background>

                                <DockPanel>
                                    <StackPanel Width="350" HorizontalAlignment="Left" Margin="140 0 0 0">
                                        <Border BorderThickness="2,0,2,2" BorderBrush="#CC8F00" CornerRadius="5,5,10,10">
                                            <!-- persons informations -->
                                            <Label  Width="auto" FontSize="10" HorizontalContentAlignment="Left" Foreground="White" Padding="10" FontStyle="Normal" FontFamily="Sitka Text">

                                                <TextBlock TextAlignment="Left" Width="340">
                        Name: <LineBreak/>
                        Birthday: <LineBreak/>
                        Country: <LineBreak/>
                        Adress: <LineBreak/>
                        Sex: <LineBreak/>
                        Phone Number:
                                                </TextBlock>


                                            </Label>

                                        </Border>

                                    </StackPanel>

                                </DockPanel>



                            </DockPanel>
                        </StackPanel>
                        
                        
                        <!-- separeting line between people -->
                        <Separator Margin="0,10,0,10"></Separator>

                        <!-- add more people if you need -->
                        
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>